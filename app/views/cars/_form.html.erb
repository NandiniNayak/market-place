
<%= simple_form_for(@car) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :make %>
    <%= f.input :model %>
    <%= f.input :year %>
    <%= f.input :km %>
    <%= f.input :price %>
    <%= f.input :color %>
    <%= f.date_field :registration, label: "Registration Expiry Date" %>
    <%= f.input :description %>
    <%= f.input :fuel_type, collection: ["Petrol", "Diesel", "Hybrid"] %>
    <%= f.input :transmission_type, collection: ["Manual", "Automatic"] %>
    <%= f.input :location %>
    <%= f.file_field :pictures, multiple:true %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
